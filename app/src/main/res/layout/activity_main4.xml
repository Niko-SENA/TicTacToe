<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.tictactoe.Main4Activity"
    android:background="#d0fff1">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewX00"
            android:tag="0"
            android:contentDescription="@string/ximages"
            android:src="@drawable/emptyimage"
            android:onClick="clickedX"
            android:visibility="visible"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewX01"
            android:tag="1"
            android:contentDescription="@string/ximages"
            android:src="@drawable/emptyimage"
            android:visibility="visible"
            android:onClick="clickedX"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewX02"
            android:tag="2"
            android:contentDescription="@string/ximages"
            android:src="@drawable/emptyimage"
            android:visibility="visible"
            android:onClick="clickedX"
            android:layout_row="0"
            android:layout_column="2"
            android:padding="2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewX10"
            android:tag="3"
            android:contentDescription="@string/ximages"
            android:src="@drawable/emptyimage"
            android:visibility="visible"
            android:onClick="clickedX"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewX11"
            android:tag="4"
            android:contentDescription="@string/ximages"
            android:src="@drawable/emptyimage"
            android:visibility="visible"
            android:onClick="clickedX"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewX12"
            android:tag="5"
            android:contentDescription="@string/ximages"
            android:src="@drawable/emptyimage"
            android:visibility="visible"
            android:onClick="clickedX"
            android:layout_row="1"
            android:layout_column="2"
            android:padding="2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewX20"
            android:tag="6"
            android:contentDescription="@string/ximages"
            android:src="@drawable/emptyimage"
            android:visibility="visible"
            android:onClick="clickedX"
            android:layout_row="2"
            android:layout_column="0"
            android:padding="2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewX21"
            android:tag="7"
            android:contentDescription="@string/ximages"
            android:src="@drawable/emptyimage"
            android:visibility="visible"
            android:onClick="clickedX"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewX22"
            android:tag="8"
            android:contentDescription="@string/ximages"
            android:cropToPadding="true"
            android:src="@drawable/emptyimage"
            android:visibility="visible"
            android:onClick="clickedX"
            android:layout_row="2"
            android:layout_column="2"
            android:padding="2dp" />
    </GridLayout>

</RelativeLayout>
